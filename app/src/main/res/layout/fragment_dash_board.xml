<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoardFragment">

    <TextView
        android:id="@+id/dashtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Dashboard"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/weather_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hike_button"
        android:layout_centerInParent="true"
        android:height="64dp"
        android:text="Todays Weather" />

    <Button
        android:id="@+id/hike_button"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:text="Hikes Nearby" />

    <Button
        android:id="@+id/bmi_button"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_below="@id/hike_button"
        android:layout_centerInParent="true"
        android:text="Calculate BMI" />

    <TextView
        android:id="@+id/bmi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="32dp"
        android:layout_below="@id/bmi_button"
        android:text=""/>

</RelativeLayout>