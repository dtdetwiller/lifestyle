<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboardfragments.weather.DisplayWeatherFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">


        <TextView
            android:id="@+id/WeatherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Weather in Salt Lake City, USA"
            android:textSize="40dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/TemperatureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/WeatherTitle"
            android:layout_marginTop="50dp"
            android:text="Temperature: "
            android:textSize="35dp" />

        <TextView
            android:id="@+id/PressureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TemperatureView"
            android:layout_marginTop="75dp"
            android:text="Pressure: "
            android:textSize="35dp" />

        <TextView
            android:id="@+id/HumidityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PressureView"
            android:layout_marginTop="75dp"
            android:text="Humidity: "
            android:textSize="35dp" />

        <Button
            android:id="@+id/weather_fg_back_button"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="12dp"
            android:text="Back" />

    </RelativeLayout>

</FrameLayout>