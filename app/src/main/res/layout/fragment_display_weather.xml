<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboardfragments.weather.DisplayWeatherFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TemperatureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="140dp"
            android:text="Display temp here"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/PressureView"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TemperatureView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="-84dp"
            android:text="Display pressure here"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/HumidityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PressureView"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="223dp"
            android:layout_marginEnd="112dp"
            android:text="Display humidity here"
            android:textSize="20dp" />

    </RelativeLayout>

</FrameLayout>